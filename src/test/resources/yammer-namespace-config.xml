<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:spring="http://www.springframework.org/schema/beans"
    xmlns:yammer="http://www.mulesoft.org/schema/mule/yammer"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                          http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
                          http://www.mulesoft.org/schema/mule/yammer http://www.mulesoft.org/schema/mule/yammer/3.1/mule-yammer.xsd">
                          
    <yammer:config applicationKey="${application.key}" applicationSecret="${application.secret}"/>
    
    <flow name="YammerTest">
        <inbound-endpoint address="vm://getStatuses"/>
        <yammer:get-messages/>
    </flow>
</mule>
